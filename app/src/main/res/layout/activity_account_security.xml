<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_f5f5f5">
    <com.haolyy.compliance.custom.TopBar
        android:id="@+id/top_account_security"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        app:drawableLeft="@mipmap/nav_back"
        app:drawableLeftVisibility="true"
        app:title="账户安全"
        app:titleTextColor="@color/text_4a4a4a"
        app:titleTextSize="17sp"
        app:top_background="@color/white"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="真实姓名"
            android:textColor="@color/text_4a4a4a"
            android:textSize="14sp"
           />

        <TextView android:id="@+id/real_name_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="18dp"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/arrow_right"
            android:gravity="center"
            android:text="未认证"
            android:textColor="@color/text_9b9b9b"
            android:textSize="14sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="18dp"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="银行卡"
            android:textColor="@color/text_4a4a4a"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/tv_bind_card"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/arrow_right"
            android:gravity="center"
            android:text="未绑定"
            android:textColor="@color/text_9b9b9b"
            android:textSize="14sp" />
    </RelativeLayout>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        />
    <RelativeLayout android:id="@+id/security_bind_phone"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="绑定手机"
            android:textColor="@color/text_4a4a4a"
            android:textSize="14sp"
            />

        <TextView android:id="@+id/mobile"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/arrow_right"
            android:gravity="center"
            android:text="156****0000"
            android:textColor="@color/text_9b9b9b"
            android:textSize="14sp" />
    </RelativeLayout>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="风险评估"
            android:textColor="@color/text_4a4a4a"
            android:textSize="14sp"
            />

        <TextView android:id="@+id/risk_assessment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/arrow_right"
            android:gravity="center"
            android:text="未评测"
            android:textColor="@color/text_9b9b9b"
            android:textSize="14sp" />
    </RelativeLayout>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="激活交易密码"
            android:textColor="@color/text_4a4a4a"
            android:textSize="14sp"
            />

        <TextView android:id="@+id/transaction_pwd_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/arrow_right"
            android:gravity="center"
            android:text="未激活"
            android:textColor="@color/text_9b9b9b"
            android:textSize="14sp" />
    </RelativeLayout>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="登录密码"
            android:textColor="@color/text_4a4a4a"
            android:textSize="14sp"
            />

        <TextView android:id="@+id/login_pwd_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/arrow_right"
            android:gravity="center"
            android:text="已设置"
            android:textColor="@color/text_9b9b9b"
            android:textSize="14sp" />
    </RelativeLayout>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        />
    <RelativeLayout android:id="@+id/gesture_layout"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="手势密码"
            android:textColor="@color/text_4a4a4a"
            android:textSize="14sp"
            />

        <TextView android:id="@+id/gesture_pwd_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/arrow_right"
            android:gravity="center"
            android:text="未开启"
            android:textColor="@color/text_9b9b9b"
            android:textSize="14sp" />
    </RelativeLayout>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="本息自动投标授权"
            android:textColor="@color/text_4a4a4a"
            android:textSize="14sp"
            />

        <TextView android:id="@+id/auto_invest"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/arrow_right"
            android:gravity="center"
            android:text="未开启"
            android:textColor="@color/text_9b9b9b"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>
