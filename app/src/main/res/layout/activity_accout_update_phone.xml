<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.haolyy.compliance.custom.TopBar
        android:id="@+id/top_security_update_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        app:drawableLeft="@mipmap/nav_back"
        app:drawableLeftVisibility="true"
        app:title="验证手机"
        app:titleTextColor="@color/text_4a4a4a"
        app:titleTextSize="17sp"
        app:top_background="@color/white" />

    <include layout="@layout/bg_line" />

    <RelativeLayout
        android:id="@+id/region"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="国家/地区"
            android:textColor="#FF4A4A4A"
            android:textSize="14sp" />

        <TextView
            android:layout_width="84dp"
            android:layout_height="17dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv1"
            android:text="中国大陆(86)"
            android:textColor="#FF4A4A4A"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:src="@mipmap/arrow_right" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="手机号"
            android:textColor="#FF4A4A4A"
            android:textSize="14sp" />

        <com.haolyy.compliance.custom.ClearEditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv2"
            android:hint="请输入手机号"
            android:background="@null"
            android:textColor="#FF4A4A4A"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:src="@mipmap/arrow_right" />
    </RelativeLayout>
</LinearLayout>