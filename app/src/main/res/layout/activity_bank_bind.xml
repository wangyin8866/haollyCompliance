<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f5f5f5"
    tools:context="com.haolyy.compliance.ui.bank.BankBindActivity">

    <include layout="@layout/public_title_back" />

    <LinearLayout
        android:id="@+id/ll_input_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titleBar"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:text="真实姓名"
                android:textColor="@color/text_4a4a4a"
                android:textSize="14sp" />

            <com.haolyy.compliance.custom.ClearEditText
                android:id="@+id/tv_real_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:drawableRight="@mipmap/login_delete"
                android:gravity="center"
                android:hint="张三"
                android:textColor="@color/text_9b9b9b"
                android:textColorHint="@color/text_9b9b9b"
                android:textSize="14sp" />
        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:text="身份证号"
                android:textColor="@color/text_4a4a4a"
                android:textSize="14sp" />

            <com.haolyy.compliance.custom.ClearEditText
                android:id="@+id/tv_id_card"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/login_delete"
                android:gravity="center"
                android:hint="32000000000000000000000000000"
                android:inputType="number"
                android:paddingRight="10dp"
                android:textColor="@color/text_9b9b9b"
                android:textColorHint="@color/text_9b9b9b"
                android:textSize="14sp" />
        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="开户银行"
                android:textColor="@color/text_4a4a4a"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="127dp"
                android:drawableLeft="@mipmap/bank_logo"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="招商银行"
                android:textColor="@color/text_4a4a4a"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_select_bank"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/arrow_right"
                android:gravity="center"
                android:text="请选择"
                android:textColor="@color/text_4a4a4a"
                android:textSize="14sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:text="银行卡号"
                android:textColor="@color/text_4a4a4a"
                android:textSize="14sp" />

            <com.haolyy.compliance.custom.ClearEditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:drawableRight="@mipmap/login_delete"
                android:gravity="center"
                android:hint="请输入银行卡号"
                android:textColor="@color/text_9b9b9b"
                android:textColorHint="@color/text_9b9b9b"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="right"
            android:paddingRight="20dp"
            android:paddingTop="9dp"
            android:text="招商银行 单笔限额5万元，每日限额5万元"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@color/white"
            android:paddingLeft="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="22dp"
                android:gravity="center"
                android:text="银行预留手机"
                android:textColor="@color/text_4a4a4a"
                android:textSize="14sp" />

            <com.haolyy.compliance.custom.ClearEditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:drawableRight="@mipmap/login_delete"
                android:gravity="center"
                android:hint="请输入手机号码"
                android:textColor="@color/text_9b9b9b"
                android:textColorHint="@color/text_9b9b9b"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:paddingLeft="20dp">

            <CheckBox
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/selector_proctor"
                android:button="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="6dp"
                android:gravity="center"
                android:text="我已阅读并同意"
                android:textColor="@color/text_4a4a4a"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="《预约标服务协议》"
                android:textColor="#5691f5"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_show_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titleBar"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@mipmap/bankcard_bg"
            android:paddingTop="25dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="25dp"
                android:scaleType="fitXY"
                android:src="@mipmap/bank_logo" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:src="@mipmap/fast_pay" />

            <TextView
                android:id="@+id/tv_bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:text="招商银行"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_card_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_bank_name"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="5dp"
                android:text="储蓄卡"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_card_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="55dp"
                android:layout_marginLeft="54dp"
                android:text="**** **** **** 3409"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="您已开通了上海银行存管账户"
            android:textColor="#FF9B9B9B"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="43dp"
            android:background="@drawable/shape_yellow_radius"
            android:paddingBottom="6dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingTop="6dp"
            android:text="去账户中心"
            android:textColor="@color/bg_ff9933"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_bank_next"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_ff9933"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="16sp" />
</RelativeLayout>
