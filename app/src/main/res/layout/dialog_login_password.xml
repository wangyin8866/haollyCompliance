<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="164dp"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical"
    android:paddingTop="25dp"
    >

    <TextView
        android:id="@+id/tv_sms_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:text="请输入登录密码"
        android:textColor="#FF4A4A4A"
        android:textSize="16sp" />


    <EditText
        android:id="@+id/et_sms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="54dp"
        android:background="@null"
        android:hint="请输入登录密码"
        android:inputType="textPassword"
        android:layout_marginLeft="25dp"
        android:textColor="@color/text_9b9b9b"
        android:textColorHint="@color/text_9b9b9b"
        android:textSize="14sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:background="@color/E1E1E1" />

    <TextView
        android:id="@+id/tv_wrong_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:text="密码错误"
        android:textColor="@color/text_ff7753"
        android:textSize="12sp"
        android:layout_marginLeft="25dp"
        android:visibility="invisible" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sms_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="top|center_horizontal"
            android:text="取消"
            android:textColor="@color/text_4a4a4a"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_sms_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="top|center_horizontal"
            android:text="确定"
            android:textColor="@color/bg_ff9933"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>