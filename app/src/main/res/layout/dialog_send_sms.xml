<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="200dp"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="36dp"
    android:paddingTop="25dp">

    <TextView
        android:id="@+id/tv_sms_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:lineSpacingMultiplier="1.2"
        android:text="上海银行\n已给尾号2745的手机发送了验证码"
        android:textColor="@color/text_4a4a4a"
        android:textSize="14sp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_sms"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="54dp"
            android:background="@null"
            android:inputType="number"
            android:maxLength="6"
            android:hint="请输入短信验证码"
            android:textColor="@color/text_9b9b9b"
            android:textColorHint="@color/text_9b9b9b"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/btn_sms"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:padding="6dp"
            android:text="59s"
            android:textColor="@drawable/selector_sms_color"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_wrong_tips"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="验证码错误"
        android:textColor="@color/text_ff7753"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sms_cancel"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/text_4a4a4a"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_sms_sure"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/bg_ff9933"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>