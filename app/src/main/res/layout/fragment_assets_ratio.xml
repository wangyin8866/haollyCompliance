<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <com.haolyy.compliance.custom.MagnificentChart
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        app:showTitle="false"
        app:animation="false"
        app:round="false"
        app:shadow="true"
        app:shadowColor="#F2F2F2"
        app:backgroundd="#ffffff"
        android:id="@+id/magnificentChart" />

    <RelativeLayout
        android:layout_marginBottom="28dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
            android:text="资产类型"
            android:textColor="@color/text_9b9b9b"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:text="持有笔数"
            android:textColor="@color/text_9b9b9b"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="持有金额(元)"
            android:textColor="@color/text_9b9b9b"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:paddingLeft="21dp"
        android:paddingRight="22dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/point_short_win"
            android:drawablePadding="9dp"
            android:text="短期赢"
            android:textColor="@color/text_4b4b4b"
            android:textSize="14sp" />
        <TextView android:id="@+id/short_win_plan_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
             android:layout_marginLeft="180dp"
            android:textColor="@color/text_9b9b9b"
            android:textSize="12sp" />
        <TextView android:id="@+id/short_win_plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="0"
            android:textColor="@color/text_9b9b9b"
            android:textSize="12sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:paddingLeft="21dp"
        android:paddingRight="22dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/point_yellow"
            android:drawablePadding="9dp"
            android:text="赢计划"
            android:textColor="@color/text_4b4b4b"
            android:textSize="14sp" />
        <TextView android:id="@+id/win_plan_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginLeft="180dp"
            android:textColor="@color/text_9b9b9b"
            android:textSize="12sp" />
        <TextView android:id="@+id/win_plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="0"
            android:textColor="@color/text_9b9b9b"
            android:textSize="12sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:paddingLeft="21dp"
        android:paddingRight="22dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/point_green"
            android:drawablePadding="9dp"
            android:text="周周赢"
            android:textColor="@color/text_4b4b4b"
            android:textSize="14sp" />
        <TextView android:id="@+id/week_win_plan_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginLeft="180dp"
            android:textColor="@color/text_9b9b9b"
            android:textSize="12sp" />
        <TextView android:id="@+id/week_win_plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="0"
            android:textColor="@color/text_9b9b9b"
            android:textSize="12sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:paddingLeft="21dp"
        android:paddingRight="22dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/point_blue"
            android:drawablePadding="9dp"
            android:text="消费贷"
            android:textColor="@color/text_4b4b4b"
            android:textSize="14sp" />
        <TextView android:id="@+id/consumer_credit_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginLeft="180dp"
            android:textColor="@color/text_9b9b9b"
            android:textSize="12sp" />
        <TextView android:id="@+id/consumer_credit_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="0"
            android:textColor="@color/text_9b9b9b"
            android:textSize="12sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:paddingLeft="21dp"
        android:paddingRight="22dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/point_purple"
            android:drawablePadding="9dp"
            android:text="闪车贷"
            android:textColor="@color/text_4b4b4b"
            android:textSize="14sp" />
        <TextView android:id="@+id/fast_car_loan_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginLeft="180dp"
            android:textColor="@color/text_9b9b9b"
            android:textSize="12sp" />
        <TextView android:id="@+id/fast_car_loan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="0"
            android:textColor="@color/text_9b9b9b"
            android:textSize="12sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:paddingLeft="21dp"
        android:paddingRight="22dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/point_pink"
            android:drawablePadding="9dp"
            android:text="票据贷"
            android:textColor="@color/text_4b4b4b"
            android:textSize="14sp" />
        <TextView android:id="@+id/bill_loan_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginLeft="180dp"
            android:textColor="@color/text_9b9b9b"
            android:textSize="12sp" />
        <TextView android:id="@+id/bill_loan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/text_9b9b9b"
            android:textSize="12sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:paddingLeft="21dp"
        android:paddingRight="22dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/point_unuseful"
            android:drawablePadding="9dp"
            android:text="可用金额"
            android:textColor="@color/text_4b4b4b"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginLeft="180dp"
            android:textColor="@color/text_9b9b9b"
            android:textSize="12sp" />
        <TextView android:id="@+id/available_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="0"
            android:textColor="@color/text_9b9b9b"
            android:textSize="12sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:paddingLeft="21dp"
        android:paddingRight="22dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/point_useful"
            android:drawablePadding="9dp"
            android:text="冻结金额"
            android:textColor="@color/text_4b4b4b"
            android:textSize="14sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginLeft="180dp"
            android:textColor="@color/text_9b9b9b"
            android:textSize="12sp" />
        <TextView android:id="@+id/frozen_loan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="0"
            android:textColor="@color/text_9b9b9b"
            android:textSize="12sp" />
    </RelativeLayout>
    </LinearLayout>
</ScrollView>