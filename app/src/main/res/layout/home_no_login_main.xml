<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.haolyy.compliance.custom.CircleView
        android:id="@+id/id_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:bg_color="#50fbda61"
        app:circle_inner_sweep_width="1dp"
        app:circle_out_sweep_width="30dp"
        app:circle_text="投资"
        app:circle_text_color="#50fbda61"
        app:circle_text_size="12sp"
        app:inner_color="#dedede"
        app:inner_radius="22dp"
        app:out_color="@android:color/black"
        app:out_radius="100dp" />
</LinearLayout>