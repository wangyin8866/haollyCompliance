    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="224dp"
        android:background="@mipmap/own_head_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="38dp"
            android:layout_marginTop="31dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/messages" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="我的"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/iv_setting"
                android:src="@mipmap/messages" />

            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/setting" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="14dp">

            <ImageView
                android:id="@+id/iv_head_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/head_icon" />

            <ImageView
                android:id="@+id/iv_gold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/iv_head_icon"
                android:src="@mipmap/gold_member" />

            <TextView
                android:id="@+id/tv_gold_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/iv_gold"
                android:layout_below="@+id/iv_gold"
                android:layout_marginTop="6dp"
                android:text="156****3941"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="8dp"
                android:drawableRight="@mipmap/arrow_right_white"
                android:text="账户管理"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </RelativeLayout>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:orientation="horizontal">

            <com.haolyy.compliance.custom.VeticalDoubleTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="83dp"
                app:textBottom="3200000"
                app:textColorBottom="#ffffff"
                app:textColorTop="#ffffff"
                app:textSizeBottom="16sp"
                app:textSizeTop="12sp"
                app:textTop="可用余额(元)"
                app:textdrablepadding="8dp"
                app:textmargin="6dp" />

            <com.haolyy.compliance.custom.VeticalDoubleTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="76dp"
                app:ivright="@mipmap/bing"
                app:textBottom="3200000.0"
                app:textColorBottom="#ffffff"
                app:textColorTop="#ffffff"
                app:textSizeBottom="16sp"
                app:textSizeTop="12sp"
                app:textTop="资产总额(元)"
                app:textdrablepadding="8dp"
                app:textmargin="6dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="49dp"
         android:orientation="horizontal"
         >
         <TextView
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:gravity="center"
             android:text="提现"
             android:textColor="@color/text_4a4a4a"
             android:textSize="16sp"
             />
         <View
             android:layout_width="1dp"
             android:layout_height="17dp"
             android:background="@color/bg_f5f5f5"
             android:layout_marginTop="19dp"
             />
         <TextView
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:gravity="center"
             android:text="充值"
             android:textColor="@color/bg_ff9933"
             android:textSize="16sp"
             />
     </LinearLayout>
</LinearLayout>