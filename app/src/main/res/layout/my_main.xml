<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="224dp"
            android:background="@mipmap/own_head_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="38dp"
                android:layout_marginTop="31dp"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/messages" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="我的"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/iv_setting"
                    android:src="@mipmap/messages" />

                <ImageView
                    android:id="@+id/iv_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/setting" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="14dp">

                <ImageView
                    android:id="@+id/iv_head_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/head_icon" />

                <ImageView
                    android:id="@+id/iv_gold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@+id/iv_head_icon"
                    android:src="@mipmap/gold_member" />

                <TextView
                    android:id="@+id/tv_gold_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/iv_gold"
                    android:layout_below="@+id/iv_gold"
                    android:layout_marginTop="6dp"
                    android:text="156****3941"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="8dp"
                    android:drawableRight="@mipmap/arrow_right_white"
                    android:text="账户管理"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </RelativeLayout>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:orientation="horizontal">

                <com.haolyy.compliance.custom.VeticalDoubleTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="20dp"
                    app:textBottom="3200000"
                    app:textColorBottom="#ffffff"
                    app:textColorTop="#ffffff"
                    app:textSizeBottom="16sp"
                    app:textSizeTop="12sp"
                    app:textTop="可用余额(元)"
                    app:textdrablepadding="8dp"
                    app:textmargin="6dp" />

                <com.haolyy.compliance.custom.VeticalDoubleTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    app:textBottom="932"
                    app:textColorBottom="#ffffff"
                    app:textColorTop="#ffffff"
                    app:textSizeBottom="16sp"
                    app:textSizeTop="12sp"
                    app:textTop="冻结金额(元)"
                    app:textdrablepadding="8dp"
                    app:textmargin="6dp" />

                <com.haolyy.compliance.custom.VeticalDoubleTextView
                    android:id="@+id/vd_total_asset"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="20dp"
                    app:ivright="@mipmap/bing"
                    app:textBottom="3200000.0"
                    app:textColorBottom="#ffffff"
                    app:textColorTop="#ffffff"
                    app:textSizeBottom="16sp"
                    app:textSizeTop="12sp"
                    app:textTop="资产总额(元)"
                    app:textdrablepadding="8dp"
                    app:textmargin="6dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_withdraw"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="提现"
                android:textColor="@color/text_4a4a4a"
                android:textSize="16sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="17dp"
                android:layout_marginTop="19dp"
                android:background="@color/bg_f5f5f5" />

            <TextView
                android:id="@+id/tv_recharge"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="充值"
                android:textColor="@color/bg_ff9933"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/bg_f5f5f5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.haolyy.compliance.custom.VeticalDoubleTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                app:ivleft="@mipmap/icon_youhui_quan"
                app:textBottom="优惠券"
                app:textColorBottom="@color/text_878787"
                app:textColorTop="@color/text_4a4a4a"
                app:textSizeBottom="12sp"
                app:textSizeTop="18sp"
                app:textTop="0"
                app:textdrablepadding="6dp"
                app:textmargin="6dp" />

            <com.haolyy.compliance.custom.VeticalDoubleTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                app:ivleft="@mipmap/icon_socres"
                app:textBottom="任务"
                app:textColorBottom="@color/text_878787"
                app:textColorTop="@color/text_4a4a4a"
                app:textSizeBottom="12sp"
                app:textSizeTop="18sp"
                app:textTop="0"
                app:textdrablepadding="6dp"
                app:textmargin="6dp" />

            <com.haolyy.compliance.custom.VeticalDoubleTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                app:ivleft="@mipmap/icon_misson"
                app:textBottom="积分"
                app:textColorBottom="@color/text_878787"
                app:textColorTop="@color/text_4a4a4a"
                app:textSizeBottom="12sp"
                app:textSizeTop="18sp"
                app:textTop="0"
                app:textdrablepadding="6dp"
                app:textmargin="6dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/bg_f5f5f5" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/point_pink"
                android:drawablePadding="9dp"
                android:text="短期赢"
                android:textColor="@color/text_4b4b4b"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawablePadding="9dp"
                android:drawableRight="@mipmap/arrow_right"
                android:text="10,000.00"
                android:textColor="@color/text_9b9b9b"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="19dp"
            android:background="@color/bg_f5f5f5" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/point_yellow"
                android:drawablePadding="9dp"
                android:text="赢计划"
                android:textColor="@color/text_4b4b4b"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawablePadding="9dp"
                android:drawableRight="@mipmap/arrow_right"
                android:text="10,000.00"
                android:textColor="@color/text_9b9b9b"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="19dp"
            android:background="@color/bg_f5f5f5" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/point_blue"
                android:drawablePadding="9dp"
                android:text="优选计划"
                android:textColor="@color/text_4b4b4b"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawablePadding="9dp"
                android:drawableRight="@mipmap/arrow_right"
                android:text="10,000.00"
                android:textColor="@color/text_9b9b9b"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="19dp"
            android:background="@color/bg_f5f5f5" />

        <View
            android:id="@+id/v_invite_friend"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@mipmap/banner_invite" />
    </LinearLayout>
</ScrollView>