<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/investemnt_step_iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:src="@mipmap/time_progress_orange" />

        <View
            android:id="@+id/investemnt_time_v1"
            style="@style/investment_time_view"
            android:background="@color/bg_f5f5f5" />

        <ImageView
            android:id="@+id/investemnt_step_iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/time_progress_orange" />

        <View
            android:id="@+id/investemnt_time_v2"
            style="@style/investment_time_view"
            android:background="@color/bg_f5f5f5" />

        <ImageView
            android:id="@+id/investemnt_step_iv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/time_progress_orange" />

        <View
            android:id="@+id/investemnt_time_v3"
            style="@style/investment_time_view"
            android:background="@color/bg_f5f5f5" />

        <ImageView
            android:id="@+id/investemnt_step_iv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="36dp"
            android:src="@mipmap/time_progress_orange" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:weightSum="4">

        <TextView
            android:id="@+id/investemnt_step_tv1"
            style="@style/investment_time_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="11dp"
            android:text="起售日"
            android:textColor="@color/text_4b4b4b" />

        <TextView
            android:id="@+id/investemnt_step_tv2"
            style="@style/investment_time_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="截止日"
            android:textColor="@color/text_4b4b4b" />

        <TextView
            android:id="@+id/investemnt_step_tv3"
            style="@style/investment_time_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="起息日"
            android:textColor="@color/text_4b4b4b" />

        <TextView
            android:id="@+id/investemnt_step_tv4"
            style="@style/investment_time_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="11dp"
            android:text="预计到期日"
            android:textColor="@color/text_4b4b4b" />
    </LinearLayout>
</LinearLayout>