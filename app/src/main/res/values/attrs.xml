<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="diameter" format="dimension" />

    <declare-styleable name="CircleProgressView">
        <attr name="diameter" />
    </declare-styleable>

    <!--自定义圆-->
    <declare-styleable name="CircleView">
        <attr name="bg_color" format="color" />
        <attr name="out_color_start" format="color" />
        <attr name="out_color_end" format="color" />
        <attr name="circle_text" format="string" />
        <attr name="circle_text_color" format="color" />
        <attr name="circle_text_size" format="dimension" />
        <attr name="circle_out_sweep_width" format="dimension" />

    </declare-styleable>
    <!--自定义圆环-->
    <declare-styleable name="ArcView">
        <attr name="arc_bg_color" format="color" />
        <attr name="arc_out_color" format="color" />
        <attr name="arc_little_color" format="color" />
        <attr name="arc_out_radius" format="dimension" />
        <attr name="arc_little_radius" format="dimension" />
        <attr name="arc_sweep_width" format="dimension" />
        <attr name="arc_start_angle" format="integer" />
        <attr name="arc_end_angle" format="integer" />
        <attr name="arc_text1" format="string" />
        <attr name="arc_text1_size" format="dimension" />
        <attr name="arc_text2_size" format="dimension" />
        <attr name="arc_text2" format="string" />
        <attr name="arc_text_color" format="color" />
    </declare-styleable>
    <!--垂直排列的两个textview-->
    <declare-styleable name="VeticalDoubleTextView">
        <attr name="textSizeTop" format="dimension" />
        <attr name="textColorTop" format="color" />
        <attr name="textTop" format="string" />
        <attr name="textBottom" format="string" />
        <attr name="textSizeBottom" format="dimension" />
        <attr name="textColorBottom" format="color" />
        <attr name="textmargin" format="dimension" />
        <attr name="textdrablepadding" format="dimension" />
        <attr name="ivleft" format="reference" />
        <attr name="ivright" format="reference" />
        <attr name="textGravity" format="enum">
            <enum name="center" value="0" />
            <enum name="left" value="1" />
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>
     <!--资产统计饼图-->
    <declare-styleable name="MagnificentChart">
        <attr name="animation" format="boolean"/>
        <attr name="round" format="boolean" />
        <attr name="shadow" format="boolean" />
        <attr name="showTitle" format="boolean" />
        <attr name="shadowColor" format="color" />
        <attr name="backgroundd" format="color" />
    </declare-styleable>
</resources>